{
  "name": "@primo-poker/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for the Primo Poker application",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf dist src/**/*.js src/**/*.d.ts src/**/*.map",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci"
  },
  "dependencies": {
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "jest": "^30.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["<rootDir>/src/**/*.test.ts"],
    "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.test.ts", "!src/**/*.d.ts"]
  }
}