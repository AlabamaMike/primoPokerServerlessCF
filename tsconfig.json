{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@primo-poker/core": ["./packages/core/src"],
      "@primo-poker/api": ["./packages/api/src"],
      "@primo-poker/persistence": ["./packages/persistence/src"],
      "@primo-poker/security": ["./packages/security/src"],
      "@primo-poker/shared": ["./packages/shared/src"],
      "@primo-poker/logging": ["./packages/logging/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**/*",
    "**/coverage/**/*"
  ],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/logging" },
    { "path": "./packages/core" },
    { "path": "./packages/security" },
    { "path": "./packages/persistence" },
    { "path": "./packages/api" },
    { "path": "./apps/poker-server" }
  ]
}
